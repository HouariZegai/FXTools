<HBox alignment="CENTER_LEFT" stylesheets="@signup.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane>
         <children>
            <ImageView fitHeight="500.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/tree.png" />
               </image></ImageView>
            <AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="500.0" styleClass="right-root">
               <children>
                  <VBox layoutX="25.0" layoutY="150.0" spacing="20.0" AnchorPane.leftAnchor="25.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Create Your Own Account" wrappingWidth="209.4609375" />
                        <HBox spacing="10.0">
                           <children>
                              <JFXButton text="ABOUT US">
                                 <styleClass>
                                    <String fx:value="btn" />
                                    <String fx:value="btn-about" />
                                 </styleClass>
                              </JFXButton>
                              <JFXButton text="SIGN IN">
                                 <styleClass>
                                    <String fx:value="btn" />
                                    <String fx:value="btn-signin" />
                                 </styleClass>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
      <VBox prefWidth="230.0" spacing="20.0">
         <children>
            <JFXTextField labelFloat="true" promptText="FIRST NAME" styleClass="field" />
            <JFXTextField labelFloat="true" promptText="LAST NAME" styleClass="field" />
            <JFXTextField labelFloat="true" promptText="USERNAME" styleClass="field" />
            <JFXTextField labelFloat="true" promptText="E-MAIL" styleClass="field" />
            <JFXPasswordField labelFloat="true" promptText="PASSWORD" styleClass="field" />
            <JFXPasswordField labelFloat="true" promptText="PASSWORD" styleClass="field" />
            <JFXTextField labelFloat="true" promptText="PHONE NUMBER" styleClass="field" />
            <JFXToggleButton selected="true" styleClass="toggle-btn" text="UNDER 18 ?" toggleColor="#6c0f9f">
               <padding>
                  <Insets left="-5.0" />
               </padding></JFXToggleButton>
            <JFXButton text="GET STARTED">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="btn-signup" />
               </styleClass>
            </JFXButton>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</HBox>
