<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <VBox prefHeight="500.0" prefWidth="300.0" styleClass="card" stylesheets="@card.css">
        <children>
            <ImageView fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@man.png" />
                </image>
            </ImageView>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="160.0" prefWidth="260.0" spacing="10.0">
                <VBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </VBox.margin>
                <children>
                    <Label styleClass="title" text="John Doe" />
                    <Label styleClass="text" text="Some example text some example text. John Doe is an architect and engineer" wrapText="true" />
                    <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="122.0" styleClass="btn" text="See Profile" />
                </children>
            </VBox>
        </children>
    </VBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</StackPane>
